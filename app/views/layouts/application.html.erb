<!DOCTYPE html>
<html>
  <head>
    <title>Work-Github</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <div class="navbar">
          <span><%= link_to "LOGO", root_path, class:"navbar-brand" %></span>
        </div>
        <div class="row">
        <% if customer_signed_in? && !admin_signed_in? %>
          <div class="col"><%= link_to "マイページ", customer_show_path %></div>
          <div class="col"><%= link_to "商品一覧", items_path, class:"navbar-brand" %> </div>
          <div class="col"><%= link_to "カート", cart_items_path %></div>
          <div class="col"><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"navbar-brand" %></div>
        <% end %>
        <% if !customer_signed_in? && !admin_signed_in? %>
          <div class="col"><%= link_to "About", homes_about_path, class:"btn btn_green" %></div>
          <div class="col"><%= link_to "商品一覧", items_path, class:"navbar-brand" %> </div>
          <div class="col"><%= link_to "新規登録", new_customer_registration_path, class:"navbar-brand" %></div>
          <div class="col"><%= link_to "ログイン", new_customer_session_path, class:"navbar-brand" %></div>
        <% end %>
        <% if admin_signed_in? %>
          <div class="col"><%= link_to "商品一覧", admin_items_path, class:"navbar-brand" %></div>
          <div class="col"><%= link_to "会員一覧", admin_customers_path, class:"navbar-brand" %></div>
          <div class="col"><%= link_to "注文履歴一覧", admin_homes_top_path, class:"navbar-brand" %></div>
          <div class="col"><%= link_to "ジャンル一覧", admin_genres_path, class:"navbar-brand" %></div>
          <div class="col"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"navbar-brand" %></div>
        <% end %>
        </div>
    </header>
    <%= yield %>
  </body>
</html>
