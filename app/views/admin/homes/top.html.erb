<h2>注文履歴一覧</h2>


<div class="container" style="width: 60%">
  <div class="align-items-center justify-content-center">
    <div class="row">
      <table class="table">
        <thead>
          <tr class="thead-light">
            <th style="width: 20%">購入日時</th>
            <th style="width: 20%">購入者</th>
            <th style="width: 20%">注文個数</th>
            <th style="width: 20%">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <U>
                <%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at, format: :default, class: "nav-link text-dark underline" %>
                <% end %>
              </U>
            </td>
            <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
            <td>
              <%= order.order_details.sum(:amount) %>
            </td>
            <td>
            <% if order.status == "waiting" %>
              入金待ち
            <% elsif order.status == "confirm" %>
              入金確認
            <% elsif order.status == "production" %>
              製作中
            <% elsif order.status == "preparation" %>
              発送準備中
            <% else %>
              発送済み
            <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>