<h2>商品詳細</h2>

<%= image_tag @item.get_image(100,100) %>

<table>
  <tr>
    <th>商品名</th><td><%= @item.name %></td>
  </tr>

  <tr>
    <th>商品説明</th><td><%= @item.introduction %></td>
  </tr>

  <tr>
    <th>ジャンル</th><td><%= @genre.name %></td>
  </tr>

  <tr>
    <th>税込価<br>(税込価格)</th><td><%= @tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
  </tr>

  <tr>
    <th>販売ステータス</th>
    <% if @item.is_active == true %>
      <td>販売中</td>
    <% else %>
      <td>販売停止中</td>
    <% end %>
  </tr>

</table>
<%= link_to "編集する", edit_admin_item_path(@item.id) %>