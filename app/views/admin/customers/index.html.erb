<p id="notice"></p>
<main>
  <div class="container mb-4 mt-4 d-flex">
    <h4 class="bg-light">会員一覧</h4>
  </div>
  <%= flash[:notice] %>
  
  <div class="container" style="width: 70%">
    <table class="table">
      <thead>
        <tr class="thead-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
  
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <u class="text-dark">
                <%= customer.last_name %>
                <%= customer.first_name %>
              </u>
              <% end %>
            </td>
            <td><%= customer.email %></td>
              <% if customer.is_deleted == false %>
                <td class="text-success">有効</td>
              <% else %>
                <td class="text-muted">退会</td>
              <% end %>
            </td>
          </tr>
        <% end %>
        <%= paginate @customers %>
      </tbody>
      </thead>
    </table>
  </div>
</main>