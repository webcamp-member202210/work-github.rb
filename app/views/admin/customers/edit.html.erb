
<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<table>
  <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
  <tr>
    <th>会員ID</th><td><%= @customer.id %></td>
  </tr>
  <tr>
    <th>氏名</th><td><%= f.text_field :last_name, autofocus: true %> <%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th><td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便局</th><td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th><td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th><td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会" %>
    </td>
  </tr>

</table>

<div><%= f.submit "変更を保存" %></div>
<% end %>