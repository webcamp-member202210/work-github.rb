<p id="notice"></p>
<div class="container mt-4 mb-4 d-flex">
  <h4 class="bg-light"><strong><%= @customer.last_name %><%= @customer.first_name %></strong>さんの<strong>会員情報編集</strong></h4>
</div>
  <%= flash[:notice] %>
  <div class="container">
  <% if @customer.errors.any? %>
    <h2><%= @customer.errors.count %> 件のエラーが発生しました。</h2>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
<div class="container">
  <div style="width: 60%">
    <table class="table table-borderless">
      <tr>
        <th style="width: 30%">会員ID</th><td style="width: 70%"><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th><td><%= f.text_field :last_name, autofocus: true %>　　<%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th><td><%= f.text_field :last_name_kana %>　　<%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便局</th><td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th><td><%= f.text_field :address, style: "width: 90%" %></td>
      </tr>
      <tr>
        <th>電話番号</th><td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th><td><%= f.text_field :email, style: "width: 70%" %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
      </tr>
    </table>
  </div>
</div>

<% end %>