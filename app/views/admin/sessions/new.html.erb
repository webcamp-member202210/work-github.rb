<p id="notice"></p>

  <div>
    <%= flash[:notice] %>
    <% if @admin.errors.any? %>
      <h2><%= @admin.errors.count %> 件のエラーが発生しました。</h2>
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="container d-flex">
    <h4 class="bg-light">管理者ログイン</h4>
  </div>
  </div>
    
  <div class="container mt-4" style="width: 70%">
    <div class="align-items-center justify-content-center">
      <div class="col-md-8 offset-md-1">
        <%= form_with model: @admin, url: admin_session_path do |f| %>
          <table class="talble">
            <tr style="width: 100%">
              <th style="width: 20%"><%= f.label :email, "メールアドレス" %></th>
              <td style="width: 40%"><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 80%" %></td>
            </tr>
              <tr class="mb-3">
                <th><%= f.label :password, "パスワード" %></th>
                <td><%= f.password_field :password, autocomplete: "current-password", style: "width: 80%" %></td>
              </tr>
            <tr class="mt-3" >
              <th></th>
              <td><%= f.submit "ログイン", class: "btn btn-primary" %></td>
            </tr>
          </table>
        <% end %>

        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>