<p id="notice"></p>
<%= flash[:notice] %>
<div class="container mt-3 mb-3 d-flex">
  <h4 class="bg-light">ジャンル一覧・追加</h4>
</div>
<div class="container">
  <% if @genre.errors.any? %>
    <h3><%= @genre.errors.count %> 件のエラーが発生しました。</h3>
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>


<%= form_with model: @genre, url:admin_genres_path do |f| %>
  <div class="container mt-4 mb-4">
    <div class="row" style="width: 70%">
      <table class="table table-borderless">
        <tr>
          <th style="width: 25%">ジャンル名</th>
          <td><%= f.text_field :name, placeholder: "ジャンル名" %>　　<%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    </div>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-4">
      <table class="table">
        <thead>
          <tr class="thead-light">
            <th class="d-flex align-items-center justify-content-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success float-right" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>