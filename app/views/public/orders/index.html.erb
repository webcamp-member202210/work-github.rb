<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @orders.each do |order| %>
      <td><%= l order.created_at, format: :short %></td>
      <td>〒<%= order.postal_code %><br><%= order.address_code %><br><%= order.name %></td>
      <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.name %><br>
        <% end %>
      </td>
      <td><%= order.bill.to_s(:delimited) %>円</td>
      <td></td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
    </tr>
      <% end %>
  </tbody>
</table>