<div class="container d-flex mt-4 mb-4">
  <h4 class="bg-light">注文履歴一覧</h4>
</div>


<div class="d-flex ml-4">
  <table class="table table-bordered" style="width: 85%">
    <thead class="bg-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @orders.each do |order| %>
        <td class="align-middle"><%= l order.created_at, format: :short %></td>
        <td class="align-middle">〒<%= order.postal_code %><br><%= order.address_code %><br><%= order.name %></td>
        <td class="align-middle">
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %><br>
          <% end %>
        </td class="align-middle">
        <td class="align-middle"><%= order.bill.to_s(:delimited) %>円</td>
        <td class="align-middle"><%= order.status_i18n %></td>
        <td class="text-center align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
      </tr>
        <% end %>
    </tbody>
  </table>
</div>