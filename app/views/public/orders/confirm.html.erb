<h2>注文情報確認</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= ((cart_item.item.price*@tax).floor).to_s(:delimited) %></td>
      <td><%= cart_item.amount %></td>
      <td><%= (((cart_item.item.price*@tax).floor)*cart_item.amount).to_s(:delimited) %></td>
  <% end %>
    </tr>
  </tbody>
</table>

<table>
  <tr>
    <th>送料</th><td><%= @postage %></td>
  </tr>
  <tr>
    <th>商品合計</th><td><%= (@total_price.floor).to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額</th><td><%= (@bill.floor).to_s(:delimited) %></td>
  </tr>
</table>


<p>支払方法</p>
<% if @order.payment_method == "credit_card" %>
  <P>クレジットカード</P>
<% else %>
  <p>銀行振込</p>
<% end %>

<p>お届け先</p>
<p>〒<%= @order.postal_code %>　<%= @order.address_code %><br><%= @order.name %></p>

<%= form_with model: @order, url: orders_path, method: :post do |f| %>

  <%= f.submit "注文を確定する" %>
  <%= f.hidden_field :customer_id, :value => @customer.id %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address_code, :value => @order.address_code %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :postage, :value => @postage %>
  <%= f.hidden_field :bill, :value => @bill %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :status, :value => "waiting" %>
<% end %>