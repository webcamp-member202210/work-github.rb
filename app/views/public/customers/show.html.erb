<P id="notice"></P>
<div class="container d-flex pl-4">
  <h4 class="bg-light">マイページ</h4>
</div>

<div class="ml-5 d-flex mt-4 mb-4">
  <h4>登録情報</h4>
  <div class="ml-5 d-flex">
    <%= link_to "編集する", edit_customer_path, class: "btn btn-success" %>
  </div>
</div>

<div class="ml-5" style="width: 50%">
  <table class="table table-bordered">
    <tr>
      <th class="bg-light" style="width: 30%">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="bg-light">カナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th class="bg-light">郵便番号</th><td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="bg-light">住所</th><td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="bg-light">電話番号</th><td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="bg-light">メールアドレス</th><td><%= @customer.email %></td>
    </tr>
  </table>
</div>

<div class="d-flex ml-5 pb-3 pt-4">
  <h5>配送先</h5>
  <div class="ml-5">
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="d-flex ml-5">
  <h5>注文履歴</h5>
  <div class="ml-4">
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>

