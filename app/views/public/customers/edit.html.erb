<p id="notice"></p>

<h2>会員情報編集</h2>

<table>
  <%= form_with model: @customer, url: update_customer_path, method: :patch do |f| %>
  <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= f.text_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= f.number_field :telephone_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= f.text_field :email %></td>
  </tr>
  <tr>
    <th></th>
    <td>
      <%= f.submit "変更内容を保存する" %>
      <%= link_to "退会する", customers_unsubscribe_path %>
    </td>
  </tr>
  <% end %>
</table>