<h2>配送先編集</h2>

<table>
  <tr>
  <%= form_with model: @customer, url: public_address_path do |f| %>
    <th>郵便番号(ハイフンなし)</th><td><%= f.text_field :postal_code %></td>
    <th>住所</th><td><%= f.text_field :address %></td>
    <th>宛名</th><td><%= f.text_field :name %></td>
  </tr>
  <%= f.submit "変更内容を保存" %>
</table>
