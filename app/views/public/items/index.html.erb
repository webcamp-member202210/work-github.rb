<p id="notice"></p>
<%= flash[:notice] %>
<div class="container d-flex mb-4 mt-4">
  <h4 class="bg-light">商品一覧(全<%= @items.count %>件)</h4>
</div>
<div class="container">
  <div class="row">
      <% @items_page.each do |item| %>
      <div class="col-3">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, size: "200x150" %>
        <% end %>
        <div class="mt-2"><%= item.name %></div>
        <div class="mt-2 mb-4">¥<%= item.price.to_s(:delimited) %></div>
      </div>
      <% end %>
  </div>
</div>

<div class="d-flex align-items-center justify-content-center">
  <%= paginate @items_page %>
</div>